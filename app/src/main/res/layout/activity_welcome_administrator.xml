<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeAdministrator">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Administrator Page"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/welcomeAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You are signed in as an administrator." />

        <Button
            android:id="@+id/createServiceChoiceButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create a Service" />

        <Button
            android:id="@+id/deleteServiceChoiceButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete a Service" />

        <Button
            android:id="@+id/editServiceChoiceButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit a Service" />

        <Button
            android:id="@+id/viewServicesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Services" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>